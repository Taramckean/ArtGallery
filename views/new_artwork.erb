  <h1>Add New Artwork</h1>

<div class="centered">
  <form method="POST" action="/gallery/artworks">


    <label for="title">Title</label>
    <input type="text" name="title" id="name"/>

    <label for="materials">Materials</label>
    <input type="text" name="materials" id="materials"/>

    <label for="category">Genre</label>
    <input type="text" name="category" id="category"/>

    <label for="creation_year">Year of Creation</label>
    <input type="number" name="creation_year" id="creation_year"/>

    <label for="image">Image URL</label>
    <input type="url" name="image" id="image"/>

    <label for "artist-select">Select Artist</label>
    <select id="artist-select" name="artist-select" type="text">
      <% for artist in @artists %>
      <option value="<%= artist.id%>">
        <%= artist.name%></option>
        <% end %>
      </select>

    <input class ="button" type="submit" value="Add Artwork"/>

  </form>
</div>
